<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTest"
            style="@style/TextViewStyle.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_change_language" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_search_category_default"
                android:text="@string/go" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.kondee.testmodule.view.BadgeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorGreen"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="24sp" />
            </FrameLayout>
        </LinearLayout>

        <com.kondee.testmodule.view.UnderlineCharacterEditText
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--<TextView-->
        <!--android:id="@+id/tvLocation"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="@dimen/dimen_normal"-->
        <!--android:layout_marginTop="@dimen/dimen_normal" />-->

        <TextView
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_normal"
        android:layout_marginTop="@dimen/dimen_normal"
        android:maxLines="2" />

        <AutoCompleteTextView
            android:id="@+id/etTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etTest2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <EditText
            android:id="@+id/etTest3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="1234567890"
            android:inputType="numberDecimal" />

        <com.kondee.testmodule.view.MultiToggleButton
            android:id="@+id/multiToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:primaryColor="@color/colorGreen"
            app:secondaryColor="@color/colorWhite"
            app:values="@array/item_for_multiple_toggle_button" />

        <com.kondee.testmodule.view.CircularImageView
            android:id="@+id/imvCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:src="@drawable/globe"
            app:borderColor="@color/colorPrimaryDark"
            app:borderWidth="6dp" />


    </LinearLayout>
</layout>